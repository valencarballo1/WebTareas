<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @*<link rel="stylesheet" href="~/Content/Site.css" />*@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.12/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="~/Scripts/Layout.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="menu-container">
        <ul class="vertical-nav">
            <li>
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="nav-label">Dashboard</span>
                </a>
            </li>
            <li>
                <a class="nav-link" href="@Url.Action("VerTodasLasTareas", "Tareas")">
                    <i class="far fa-address-book"></i>
                    <span class="nav-label">View My Works</span>
                </a>
            </li>
            <li>
                <a class="nav-link" href="@Url.Action("CrearUsuario", "Usuario")" id="create-user-link">
                    <i class="far fa-clone"></i>
                    <span class="nav-label">Create User</span>

                </a>
            </li>
            @if (ViewBag.usuarioActivo != null)
            {
                if (ViewBag.usuarioActivo.IdRol == 1)
                {
                    <li>
                        <a class="nav-link" href="@Url.Action("CrearNuevaTarea", "Tareas")">
                            <i class="far fa-copy"></i>
                            <span class="nav-label">New Work</span>
                        </a>
                    </li>
                }
            }
            @if (ViewBag.usuarioActivo == null)
            {
                <li>
                    <a class="nav-link iniciarSesion" href="@Url.Action("InicioUsuario", "Usuario")">
                        <i class="fa-solid fa-power-off"></i>
                        <span class="nav-label">Iniciar sesion</span>
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a class="nav-link cerrarSesion" href="#">
                        <i class="fa-solid fa-power-off"></i>
                        <span class="nav-label">Cerrar sesion</span>
                    </a>
                </li>
            }
        </ul>
    </div>

    <div class="content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.12/dist/sweetalert2.all.min.js"></script>
    <script>

        $(document).ready(function () {
            $('.iniciarSesion').on('click', function(e) {
                e.preventDefault();
                 window.location.href = '@Url.Action("InicioUsuario", "Usuario")';
            });

            $('.cerrarSesion').on('click', function (e) {
                e.preventDefault();
                CerrarSesion();
            });
});

        function CerrarSesion() {
    $.ajax({
        url: '@Url.Action("CierreSesion", "Usuario")',
        type: 'GET',
        data: { },
        success: function (response) {
            if (response.success) {
                // Aquí puedes realizar acciones adicionales después de agregar el producto al carrito
                console.log('Entro');
                Swal.fire({
                    icon: 'success',
                    title: 'Se cerro sesion exitosamente!',
                    showConfirmButton: false,
                    timer: 1000
                }).then(function() {
                                window.location.href = '@Url.Action("Index", "Home")';
                            });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: response.message
                });
            }
        },
    });
    }
    </script>
</body>
</html>
